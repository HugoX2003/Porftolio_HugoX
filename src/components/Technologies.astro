---
import { Icon } from "astro-icon/components";

const skills = [
    { name: "JavaScript", icon: "mdi:language-javascript", color: "#F7DF1E" },
    { name: "Java", icon: "mdi:language-java", color: "#007396" },
    { name: "Python", icon: "mdi:language-python", color: "#3776AB" },
    { name: "Kotlin", icon: "mdi:language-kotlin", color: "#7F52FF" },
    { name: "Next.js", icon: "simple-icons:nextdotjs", color: "#ffffff" },
    { name: "Spring Boot", icon: "simple-icons:springboot", color: "#6DB33F" },
    { name: "MySQL", icon: "simple-icons:mysql", color: "#4479A1" },
    { name: "Tailwind", icon: "simple-icons:tailwindcss", color: "#38B2AC" },
    { name: "PHP", icon: "simple-icons:php", color: "#777BB4" },
    { name: "WordPress", icon: "simple-icons:wordpress", color: "#21759B" },
    { name: "Angular", icon: "simple-icons:angular", color: "#DD0031" },
    { name: "React", icon: "simple-icons:react", color: "#61DAFB" },
    { name: "Astro", icon: "simple-icons:astro", color: "#FF5D01" },
    { name: "Figma", icon: "simple-icons:figma", color: "#F24E1E" },
    { name: "PostgreSQL", icon: "simple-icons:postgresql", color: "#336791" },
].sort((a, b) => a.name.localeCompare(b.name));
---

<section id="technologies" class="tech-section">
    <div class="container">
        <h2 class="section-title">
            <span class="bracket">[</span> SKILLS <span class="bracket">]</span>
        </h2>

        <div class="grid">
            {
                skills.map((skill) => (
                    <div class="tech-card">
                        <div class="icon-wrapper">
                            <Icon
                                name={skill.icon}
                                class="tech-icon"
                                style={`color: ${skill.color}`}
                            />
                        </div>
                        <span class="tech-name">{skill.name}</span>
                        <div class="corner-decor top-right" />
                        <div class="corner-decor bottom-left" />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .tech-section {
        padding: 4rem 0;
        position: relative;
    }

    .section-title {
        color: var(--color-primary);
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2rem;
        word-break: break-word;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 1.5rem;
        }
    }

    .bracket {
        color: var(--color-text);
        animation: blink 1s infinite;
    }

    .grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
    }

    .tech-card {
        flex: 1 1 160px;
        max-width: 200px;
        background: rgba(20, 20, 20, 0.8);
        border: 1px solid var(--color-border);
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        position: relative;
        transition: all 0.3s ease;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 85% 100%, 0 100%);
    }

    .tech-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary);
        box-shadow: 0 5px 15px rgba(0, 255, 65, 0.1);
    }

    .tech-card:hover .tech-icon {
        filter: drop-shadow(0 0 5px currentColor);
    }

    .tech-icon {
        width: 48px;
        height: 48px;
        transition: all 0.3s ease;
    }

    .tech-name {
        font-family: var(--font-heading);
        color: var(--color-text);
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .corner-decor {
        position: absolute;
        width: 10px;
        height: 10px;
        border: 1px solid var(--color-accent);
        opacity: 0.5;
    }

    .top-right {
        top: 5px;
        right: 5px;
        border-bottom: none;
        border-left: none;
    }

    .bottom-left {
        bottom: 5px;
        left: 5px;
        border-top: none;
        border-right: none;
    }

    @keyframes blink {
        50% {
            opacity: 0;
        }
    }
</style>
