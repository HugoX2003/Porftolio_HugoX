<section class="hero">
    <div class="container hero-content">
        <div class="glitch-wrapper">
            <h1 class="hero-title glitch" data-text="HUGO MARQUEZ">
                HUGO M√ÅRQUEZ
            </h1>
        </div>
        <p class="hero-subtitle">SYSTEM.ENGINEER</p>

        <div class="cta-container">
            <a href="#projects" class="retro-btn">
                <span class="btn-text">PROJECTS</span>
                <div class="btn-decor"></div>
            </a>
            <a href="https://github.com/HugoX2003" class="retro-btn secondary">
                <span class="btn-text">GITHUB_ACCESS</span>
            </a>
            <a
                href="https://drive.google.com/file/d/1-5zokp42yqHBhsl7xclR1-Kg6YBjdT0J/view?usp=sharing"
                target="_blank"
                class="retro-btn cv-btn"
            >
                <span class="btn-text">DOWNLOAD_CV</span>
            </a>
        </div>

        <div class="status-panel">
            <div class="status-line">
                <span class="label">STATUS:</span>
                <span class="value online">ONLINE</span>
            </div>
            <div class="status-line">
                <span class="label">LOCATION:</span>
                <span class="value">PERU</span>
            </div>
            <div class="status-line">
                <span class="label">CURRENT_OBJ:</span>
                <span class="value">FRONTEND_DEV</span>
            </div>
